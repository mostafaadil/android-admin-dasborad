<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/colorBackground"
            app:cardCornerRadius="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <io.nasna.app.fonts.FontTextView
                            android:id="@+id/prodactName"
                            style="@style/FontTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_mark"
                            android:text="أٍسم المنتح" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="22dp"
                        android:background="@color/colorBorder">

                        <io.nasna.app.fonts.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/date"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text=" التاريخ" />

                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/discrption"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text="الوصف" />

                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/units"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text="الوحدات" />

                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/profet_percent"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text=" النسبة المئوىة" />

                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/proudact_sutues"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text="حالة المنتج" />


                    <io.nasna.app.fonts.FontTextView
                        android:id="@+id/total"
                        style="@style/FontTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/up_case_background"
                        android:text=" المجموع" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="22dp"
                        android:background="@color/colorBorder">

                        <io.nasna.app.fonts.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>


            </ScrollView>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>